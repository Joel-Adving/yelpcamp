<% layout("./layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center"><%= campground.title %></h1>
    <div class="col-6 offset-3 mt-4">
        <form
            method="post"
            action="/campgrounds/<%= campground.id %>?_method=PUT"
            novalidate
            class="validated-form"
            enctype="multipart/form-data"
        >
            <label class="form-label" for="title">Title</label>
            <input
                class="form-control"
                required
                type="text"
                name="campground[title]"
                id="title"
                value="<%= campground.title %>"
            />
            <label class="form-label mt-3" for="location">Location</label>
            <input
                class="form-control"
                required
                type="text"
                name="campground[location]"
                id="location"
                value="<%= campground.location %>"
            />
            <label class="form-label mt-3" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input
                    class="form-control"
                    required
                    step="0.01"
                    type="number"
                    name="campground[price]"
                    id="price"
                    placeholder="0.00"
                    value="<%= campground.price %>"
                />
            </div>
            <label class="form-label mt-3" for="description">Description</label>
            <textarea class="form-control" type="text" name="campground[description]" id="description">
<%= campground.description %></textarea
            >
            <div class="mt-3">
                <label class="form-label" for="image">Add More Image(s)...</label>
                <input class="form-control" type="file" name="image" multiple id="image" />
            </div>
            <div class="mb-3">
                <% campground.images.forEach((img,i) => { %>
                <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages" value="<%=img.filename%>" />
                    <label for="image-<%=i%>">Delete?</label>
                </div>
                <% }) %>
            </div>
            <div class="mt-4 mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <form class="mb-4" method="POST" action="/campgrounds/<%= campground.id %>/?_method=DELETE">
            <button class="btn btn-danger">Delete Campground</button>
        </form>
        <a href="/campgrounds/<%= campground.id %>">Back to campground</a>
    </div>
</div>
